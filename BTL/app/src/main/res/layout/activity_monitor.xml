<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE1D1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TOP CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_round"
            android:orientation="vertical"
            android:elevation="4dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:text="Hệ Thống Giám Sát Máy Ấp Trứng"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:text=""
            android:layout_height="40dp"
            android:layout_width="200dp"
            android:textSize="14sp"
            android:textColor="#333"/>
    <!-- NHIỆT ĐỘ -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_round"
        android:elevation="4dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:src="@drawable/ic_temp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="12dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nhiệt độ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="20dp"
                android:layout_width="200dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tvTemperature"
                android:text="45°C"
                android:layout_height="20dp"
                android:layout_width="200dp"
                android:textSize="14sp"
                android:textColor="#333"/>
        </LinearLayout>
    </LinearLayout>

        <!-- ĐỘ ẨM -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_round"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_humi"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Độ ẩm"
                    android:layout_height="20dp"
                    android:layout_width="200dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/tvHumidity"
                    android:text="60%"
                    android:layout_height="20dp"
                    android:layout_width="200dp"
                    android:textSize="14sp"
                    android:textColor="#333"/>
            </LinearLayout>
        </LinearLayout>
        <!-- THỜI GIAN ẤP -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_round"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_time"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Thời gian ấp"
                    android:layout_height="20dp"
                    android:layout_width="200dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_height="20dp"
                    android:layout_width="200dp"
                    android:text="29 ngày"
                    android:textSize="14sp"
                    android:textColor="#333"/>
            </LinearLayout>
        </LinearLayout>
        <!-- THỜI GIAN ẤP -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_round"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_fan"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Quạt thông gió"
                    android:layout_height="20dp"
                    android:layout_width="200dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/Fan"
                    android:layout_height="20dp"
                    android:layout_width="200dp"
                    android:text="Bật"
                    android:textSize="14sp"
                    android:textColor="#333"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
